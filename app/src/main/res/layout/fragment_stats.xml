<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_margin="10dp"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <TextView
    android:id="@+id/hp_txt"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:padding="5dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintWidth_percent=".33"
    android:text="HP: 00/00"
    />

  <TextView
    android:id="@+id/cmd_txt"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:padding="5dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintWidth_percent=".33"
    android:text="CMD: 00/00g"
    />

  <TextView
    android:id="@+id/ac_txt"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:padding="5dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toEndOf="@id/hp_txt"
    app:layout_constraintEnd_toStartOf="@id/cmd_txt"
    app:layout_constraintWidth_percent=".33"
    android:text="AC: 00/00f/00t"
    />

  <TextView
    android:id="@+id/hit_txt"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:padding="5dp"
    app:layout_constraintTop_toBottomOf="@id/hp_txt"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintWidth_percent=".33"
    android:text="HIT: +00/+00"
    />

  <TextView
    android:id="@+id/cmb_txt"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:padding="5dp"
    app:layout_constraintTop_toBottomOf="@id/hp_txt"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintWidth_percent=".33"
    android:text="CMB: +00/+00g"
    />

  <TextView
    android:id="@+id/dmg_txt"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:padding="5dp"
    app:layout_constraintTop_toBottomOf="@id/hp_txt"
    app:layout_constraintStart_toEndOf="@id/hit_txt"
    app:layout_constraintEnd_toStartOf="@id/cmb_txt"
    app:layout_constraintWidth_percent=".33"
    android:text="DMG: +00"
    />

  <View
    android:id="@+id/divider_1"
    android:layout_width="match_parent"
    android:layout_height="5dp"
    app:layout_constraintTop_toBottomOf="@id/hit_txt"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    />

  <Button
    android:id="@+id/non_btn"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/divider_1"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintWidth_percent=".33"
    android:text="NONLETHAL"
    />

  <Button
    android:id="@+id/hp_down_btn"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/divider_1"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintWidth_percent=".33"
    android:text="HP -"
    />

  <Button
    android:id="@+id/hp_up_btn"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/divider_1"
    app:layout_constraintStart_toEndOf="@id/non_btn"
    app:layout_constraintEnd_toStartOf="@id/hp_down_btn"
    app:layout_constraintWidth_percent=".33"
    android:text="HP +"
    />

  <View
    android:id="@+id/divider_2"
    android:layout_width="match_parent"
    android:layout_height="5dp"
    app:layout_constraintTop_toBottomOf="@id/hp_up_btn"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    />

  <TextView
    android:id="@+id/str_txt"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:padding="5dp"
    app:layout_constraintTop_toBottomOf="@id/divider_2"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintWidth_percent=".33"
    android:text="STR: 00/+00"
    />

  <TextView
    android:id="@+id/dex_txt"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:padding="5dp"
    app:layout_constraintTop_toBottomOf="@id/str_txt"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintWidth_percent=".33"
    android:text="DEX: 00/+00"
    />

  <TextView
    android:id="@+id/con_txt"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:padding="5dp"
    app:layout_constraintTop_toBottomOf="@id/dex_txt"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintWidth_percent=".33"
    android:text="CON: 00/+00"
    />

  <TextView
    android:id="@+id/int_txt"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:padding="5dp"
    app:layout_constraintTop_toBottomOf="@id/con_txt"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintWidth_percent=".33"
    android:text="INT: 00/+00"
    />

  <TextView
    android:id="@+id/wis_txt"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:padding="5dp"
    app:layout_constraintTop_toBottomOf="@id/int_txt"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintWidth_percent=".33"
    android:text="WIS: 00/+00"
    />

  <TextView
    android:id="@+id/chr_txt"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:padding="5dp"
    app:layout_constraintTop_toBottomOf="@id/wis_txt"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintWidth_percent=".33"
    android:text="CHR: 00/+00"
    />

  <View
    android:id="@+id/divider_3"
    android:layout_width="match_parent"
    android:layout_height="5dp"
    app:layout_constraintTop_toBottomOf="@id/chr_txt"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    />

  <TextView
    android:id="@+id/ref_txt"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:padding="5dp"
    app:layout_constraintTop_toBottomOf="@id/divider_3"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintWidth_percent=".33"
    android:text="REF: +00"
    />

  <TextView
    android:id="@+id/fort_txt"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:padding="5dp"
    app:layout_constraintTop_toBottomOf="@id/ref_txt"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintWidth_percent=".33"
    android:text="FORT: +00"
    />

  <TextView
    android:id="@+id/will_txt"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:padding="5dp"
    app:layout_constraintTop_toBottomOf="@id/fort_txt"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintWidth_percent=".33"
    android:text="WILL: +00"
    />

  <TextView
    android:id="@+id/mod_txt"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:padding="5dp"
    app:layout_constraintTop_toBottomOf="@id/divider_2"
    app:layout_constraintStart_toEndOf="@id/str_txt"
    app:layout_constraintWidth_percent=".66"
    android:text="MODIFIERS"
    />

  <ListView
    android:id="@+id/mod_list"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:padding="5dp"
    app:layout_constraintTop_toBottomOf="@id/mod_txt"
    app:layout_constraintStart_toEndOf="@id/dex_txt"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="@id/will_txt">
  </ListView>

  <View
    android:id="@+id/divider_4"
    android:layout_width="match_parent"
    android:layout_height="5dp"
    app:layout_constraintTop_toBottomOf="@id/will_txt"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    />

  <Button
    android:id="@+id/rage_down_btn"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/divider_4"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintWidth_percent=".33"
    android:text="RAGE -"
    />

  <TextView
    android:id="@+id/rage_txt"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:padding="5dp"
    app:layout_constraintTop_toTopOf="@id/rage_down_btn"
    app:layout_constraintBottom_toBottomOf="@id/rage_down_btn"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintWidth_percent=".33"
    android:text="RAGE: 00"
    />

  <Button
    android:id="@+id/rage_up_btn"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/divider_4"
    app:layout_constraintEnd_toStartOf="@id/rage_down_btn"
    app:layout_constraintStart_toEndOf="@id/rage_txt"
    app:layout_constraintWidth_percent=".33"
    android:text="RAGE +"
    />

</androidx.constraintlayout.widget.ConstraintLayout>