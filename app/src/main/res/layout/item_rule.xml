<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <LinearLayout
    android:id="@+id/file_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:background="@drawable/layout_border"
    android:layout_margin="2dp">

    <TextView
      android:id="@+id/item_rule_name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="5dp"
      android:paddingHorizontal="5dp"
      android:gravity="start"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:text="NAME"
      android:textSize="10dp"/>

    <TextView
      android:id="@+id/item_rule_description"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="5dp"
      android:gravity="start"
      app:layout_constraintTop_toBottomOf="@id/item_rule_name"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:text="This is a giant wall of text. This is a giant wall of text. This is a giant wall of text. This is a giant wall of text. This is a giant wall of text. This is a giant wall of text. This is a giant wall of text. This is a giant wall of text. This is a giant wall of text. This is a giant wall of text."
      android:textSize="10dp"/>

  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>